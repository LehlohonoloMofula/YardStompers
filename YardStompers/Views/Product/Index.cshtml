@model IEnumerable<YardStompers.Models.Product>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
  <div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary ">
            Products
        </h2>
        <div class="col-6 text-right">
           <a asp-action="Upsert"  class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Add Product</a>
        </div>
        <br/> <br/>
        @if(Model.Count() > 0 )
            {
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th> Image</th>
                            <th> Name</th>
                            <th> Price</th>
                            <th> Description</th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var product in Model)
                        {
                           <tr>
                             <td >@product.Image</td>
                             <td >@product.Name</td>
                             <td >@product.Price</td>
                             <td >@product.Description</td>
                             <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-controller="Product" asp-action="Upsert" asp-route-Id="@product.Id" class="btn btn-primary" mx-2><i class="fas fa-edit"></i> &nbsp;</a>
                                    <a asp-controller="Product" asp-action="Delete" asp-route-Id="@product.Id" class="btn btn-danger" mx-2><i class="fas fa-trash-alt"></i> &nbsp;</a>
                                </div>
                             </td>
                           </tr>
                           
                        }
                    </tbody>  
                </table>
            }
            else
            {
                <p> No Products!</p>
            }
        </div>
  </div>

</div>


