@model IEnumerable<YardStompers.Models.Category>

@{

    ViewData["Title"] = "Index";
}
<div class="container p-3">
  <div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">
            Category
        </h2>
        <div class="col-6 text-right">
           <a asp-action="Create" asp-controller="Category" class="btn btn-primary"> Add Category</a>
        </div>
        <br/> <br/>
        @if(Model.Count() > 0 )
            {
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th> Name</th>
                            <th> Display Order</th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var category in Model)
                        {
                            <tr width="50%">@category.Name</tr>
                            <tr width="30%">@category.DisplayOrder</tr>
                            <tr></tr>
                            <tr></tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p> No Categories!</p>
            }
        </div>
  </div>

</div>

